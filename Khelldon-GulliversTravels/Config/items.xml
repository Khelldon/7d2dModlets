<!-- Khelldon - change all the zombie hands to not be so powerful and not reach as far -->
<set xpath="/items/item[starts-with(@name, 'meleeHandZombie')]/property[@class='Action0']/property[@name='Range']/@value" >0.25</set>
<set xpath="/items/item[starts-with(@name, 'meleeHandZombie')]/property[@class='Action0']/property[@name='Block_range']/@value" >0.5</set>
<set xpath="/items/item[starts-with(@name, 'meleeHandZombie')]/property[@class='Action0']/property[@name='DamageEntity']/@value" >0.1</set>
<set xpath="/items/item[starts-with(@name, 'meleeHandZombie')]/effect_group/passive_effect[@name='EntityDamage' and @operation='base_set']/@value" >1</set>
<!-- Khelldon - Reset for ferals -->
<set xpath="/items/item[ends-with(@name, 'Feral') and (contains(@name, 'meleeHandZombie'))]/property[@class='Action0']/property[@name='Range']/@value" >0.25</set>
<set xpath="/items/item[ends-with(@name, 'Feral') and (contains(@name, 'meleeHandZombie'))]/property[@name='Block_range']/@value" >0.5</set>
<set xpath="/items/item[ends-with(@name, 'Feral') and (contains(@name, 'meleeHandZombie'))]/property[@name='DamageEntity']/@value" >0.25</set>
<set xpath="/items/item[ends-with(@name, 'Feral') and (contains(@name, 'meleeHandZombie'))]/effect_group/passive_effect[@name='EntityDamage' and @operation='base_set']/@value" >3</set>





